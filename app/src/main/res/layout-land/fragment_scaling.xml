<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivanilov.zennex.View.Fragment.ListItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/Fragment_List_Button_Gallery"
            style="@style/Button.Style"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/take_from_gallery"
            app:cornerRadius="100dp"

            ></Button>


        <Button
            android:id="@+id/Fragment_List_Button_Cam"
            style="@style/Button.Style"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/take_from_camera"
            app:cornerRadius="100dp"></Button>

    </LinearLayout>

</FrameLayout>